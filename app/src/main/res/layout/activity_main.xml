<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/black_shade_3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvprime"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvsec"
        android:background="@color/black_shade_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:ignore="RtlCompat" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvprime"
        android:background="@color/black_shade_1"
        app:cardBackgroundColor="@color/black_shade_1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_shade_1">
          <LinearLayout
            android:orientation="vertical"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4">
                    <Button
                        android:id="@+id/bac"
                        android:text="AC"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </Button>
                    <Button
                        android:id="@+id/bc"
                        android:text="C"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </Button>
                    <Button
                        android:id="@+id/bb1"
                        android:text="("
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </Button>
                    <Button
                        android:id="@+id/bb2"
                        android:text=")"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="5">
                    <Button
                        android:id="@+id/bsin"
                        android:text="sin"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:textAllCaps="false"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bcos"
                        android:text="cos"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btan"
                        android:text="tan"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/blog"
                        android:text="log"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/bln"
                    android:text="ln"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:padding="6dp"
                    android:backgroundTint="@color/black_shade_2"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="5">
                    <Button
                        android:id="@+id/bfact"
                        android:text="x!"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:textAllCaps="false"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bsquare"
                        android:text="x²"
                        android:textSize="15sp"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bsqrt"
                        android:text="√"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/binv"
                        android:text="1/x"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/bdiv"
                    android:text="÷"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textColor="@color/yellow"
                    android:padding="6dp"
                    android:backgroundTint="@color/black_shade_2"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4">
                    <Button
                        android:id="@+id/b7"
                        android:text="7"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b8"
                        android:text="8"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b9"
                        android:text="9"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bmul"
                        android:text="x"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4">
                    <Button
                        android:id="@+id/b4"
                        android:text="4"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b5"
                        android:text="5"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b6"
                        android:text="6"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bsub"
                        android:text="-"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4">
                    <Button
                        android:id="@+id/b1"
                        android:text="1"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b2"
                        android:text="2"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b3"
                        android:text="3"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/badd"
                        android:text="+"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="4">
                    <Button
                        android:id="@+id/bpi"
                        android:text="π"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/b0"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bdot"
                        android:text="."
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/bequal"
                        android:text="="
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textColor="@color/yellow"
                        android:padding="6dp"
                        android:backgroundTint="@color/black_shade_2"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
          </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

